<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_button_text</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/main_button_background</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/main_button_icon</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsStyle">
        <item name="android:textColor">@color/settings_text_list</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@color/settings_background</item>
    </style>

    <style name="HeadsText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/no_main_menu_head</item>
        <item name="android:textSize">@dimen/head_text</item>
        <item name="android:layout_marginStart">@dimen/head_margin_title</item>
    </style>

    <style name="HeadsImage">
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="HeadsLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">@dimen/head_margin_start_image</item>
        <item name="android:layout_marginTop">@dimen/head_margin_top_image</item>
    </style>

    <style name="TrackName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_name</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TrackBandAndDuration">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_band_and_duration</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SearchTextErrors">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/search_text_error</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginStart">@dimen/placeholder_margin24</item>
        <item name="android:layout_marginEnd">@dimen/placeholder_margin24</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SearchButtonErrors">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/search_button_error_text</item>
        <item name="backgroundTint">@color/search_button_error_background</item>
        <item name="android:text">@string/refresh</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/placeholder_margin24</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

</resources>