<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_button_text</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/main_button_background</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/main_button_icon</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsStyle">
        <item name="android:textColor">@color/settings_text_list</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@color/settings_background</item>
    </style>

</resources>