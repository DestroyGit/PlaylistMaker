<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageAlbum"
        android:layout_width="@dimen/album_image"
        android:layout_height="@dimen/album_image"
        android:layout_marginTop="@dimen/track_margin8"
        android:layout_marginEnd="@dimen/track_margin8"
        tools:layout_marginStart="13dp"
        tools:src="@drawable/ic_album"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TrackName"
            android:maxLines="1"
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="16sp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="@dimen/track_margin8"
            tools:text="Yesterday"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TrackBandAndDuration"
                android:id="@+id/bandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="11sp"
                android:layout_marginStart="@dimen/track_margin8"
                android:layout_marginTop="1dp"
                tools:text="The Beatles"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_point"/>

            <TextView
                style="@style/TrackBandAndDuration"
                android:id="@+id/songDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"
                tools:text="2:55"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/track_margin23"
        android:layout_marginBottom="@dimen/track_margin23"
        android:layout_marginEnd="@dimen/placeholder_margin24"
        app:drawableEndCompat="@drawable/ic_forward"/>

</LinearLayout>